<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_icon_list_item_fragment_day_schedule"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:background="@drawable/ic_profile_01"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textView_divider_list_item_fragment_day_schedule"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/textView_icon_list_item_fragment_day_schedule"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/textView_profile_name_list_item_fragment_day_schedule"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/textView_divider_list_item_fragment_day_schedule"
        android:layout_toLeftOf="@+id/relativeLayout_time_fragment_day_schedule"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"/>

    <RelativeLayout
        android:id="@+id/relativeLayout_time_fragment_day_schedule"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textView_start_time_list_item_fragment_day_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start time"/>

        <TextView
            android:id="@+id/textView_end_time_list_item_fragment_day_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_below="@+id/textView_start_time_list_item_fragment_day_schedule"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="End time"/>
    </RelativeLayout>
</RelativeLayout>