<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_icon_list_item_fragment_events"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView_icon_list_item_fragment_events"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/ic_profile_01"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_divider_list_item_fragment_events"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/linearLayout_icon_list_item_fragment_events"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/textView_title_list_item_fragment_events"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:layout_toRightOf="@+id/textView_divider_list_item_fragment_events"
        android:layout_toLeftOf="@+id/relativeLayout_fragment_events"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"/>

    <RelativeLayout
        android:id="@+id/relativeLayout_fragment_events"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/textView_start_time_list_item_fragment_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start time"/>

        <TextView
            android:id="@+id/textView_date_list_item_fragment_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"/>
    </RelativeLayout>
</RelativeLayout>