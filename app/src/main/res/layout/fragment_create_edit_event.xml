<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_title_fragment_event_create_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Title"/>

    <EditText
        android:id="@+id/editText_note_fragment_event_create_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_title_fragment_event_create_edit"
        android:hint="Note"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/textView_time_fragment_event_create_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_note_fragment_event_create_edit"
        android:layout_margin="4dp"
        android:clickable="true"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/textView_date_fragment_event_create_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_time_fragment_event_create_edit"
        android:layout_margin="4dp"
        android:clickable="true"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/textView_location_fragment_event_create_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:text="Location"
        android:layout_below="@+id/textView_date_fragment_event_create_edit"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>