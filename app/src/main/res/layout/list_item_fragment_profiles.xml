<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout_icon_list_item_fragment_profiles"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView_icon_list_item_fragment_profiles"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/ic_profile_01"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_divider_list_item_fragment_profiles"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/linearLayout_icon_list_item_fragment_profiles"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/textView_name_list_item_fragment_profiles"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/textView_divider_list_item_fragment_profiles"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile name"/>
</RelativeLayout>