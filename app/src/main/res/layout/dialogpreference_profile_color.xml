<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="5"
        android:numColumns="5">

        <Button
            android:id="@+id/button_00_dialogpreference_profile_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/button_01_dialogpreference_profile_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/button_02_dialogpreference_profile_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/button_10_dialogpreference_profile_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light"/>
    </GridView>
</LinearLayout>

